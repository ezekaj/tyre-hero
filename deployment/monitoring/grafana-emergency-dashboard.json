{
  "dashboard": {
    "id": null,
    "title": "TyreHero Emergency Service - Operations Dashboard",
    "tags": ["tyrehero", "emergency", "production"],
    "style": "dark",
    "timezone": "Europe/London",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        },
        {
          "datasource": "prometheus",
          "enable": true,
          "expr": "changes(prometheus_config_last_reload_successful[5m]) > 0",
          "hide": false,
          "iconColor": "red",
          "name": "Config Reloads",
          "showIn": 0,
          "step": "60s",
          "tagKeys": "instance",
          "tags": [],
          "textFormat": "Config reloaded",
          "titleFormat": "Prometheus Config Reload"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": "prometheus",
          "definition": "label_values(up{job=\"tyrehero-emergency-api\"}, instance)",
          "hide": 0,
          "includeAll": true,
          "label": "Instance",
          "multi": true,
          "name": "instance",
          "options": [],
          "query": "label_values(up{job=\"tyrehero-emergency-api\"}, instance)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 0,
          "tagValuesQuery": "",
          "tags": [],
          "tagsQuery": "",
          "type": "query",
          "useTags": false
        }
      ]
    },
    "panels": [
      {
        "title": "üö® Emergency Service Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.95},
                {"color": "green", "value": 0.999}
              ]
            },
            "unit": "percentunit",
            "decimals": 3
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "targets": [
          {
            "expr": "avg(up{job=\"tyrehero-emergency-api\"})",
            "legendFormat": "Service Availability",
            "refId": "A"
          }
        ]
      },
      {
        "title": "üìû Emergency Requests (Live)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "short"
          }
        },
        "targets": [
          {
            "expr": "emergency_requests_pending_count",
            "legendFormat": "Pending Requests",
            "refId": "A"
          }
        ]
      },
      {
        "title": "üë∑ Available Technicians",
        "type": "stat",
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 10}
              ]
            },
            "unit": "short"
          }
        },
        "targets": [
          {
            "expr": "available_technicians_count",
            "legendFormat": "Available Now",
            "refId": "A"
          }
        ]
      },
      {
        "title": "‚è±Ô∏è Response Time SLA",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 90},
                {"color": "yellow", "value": 75},
                {"color": "green", "value": null}
              ]
            },
            "unit": "m"
          }
        },
        "targets": [
          {
            "expr": "avg_over_time(emergency_response_time_minutes[15m])",
            "legendFormat": "Avg Response Time (15m)",
            "refId": "A"
          }
        ]
      },
      {
        "title": "üåç Geographic Coverage",
        "type": "geomap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "options": {
          "view": {
            "id": "coords",
            "lat": 54.5,
            "lon": -2,
            "zoom": 6
          },
          "controls": {
            "mouseWheelZoom": true,
            "showAttribution": true,
            "showDebug": false,
            "showScale": false,
            "showZoom": true
          },
          "basemap": {
            "type": "default"
          },
          "layers": [
            {
              "type": "markers",
              "config": {
                "showLegend": true,
                "style": {
                  "color": {
                    "field": "status",
                    "fixed": "green"
                  },
                  "size": {
                    "field": "available_technicians",
                    "fixed": 5,
                    "max": 15,
                    "min": 5
                  }
                }
              }
            }
          ]
        },
        "targets": [
          {
            "expr": "technician_locations",
            "legendFormat": "{{location}}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "üìä Emergency Request Volume",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            }
          }
        },
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "targets": [
          {
            "expr": "rate(emergency_requests_total[5m]) * 60",
            "legendFormat": "Requests per minute",
            "refId": "A"
          },
          {
            "expr": "rate(emergency_requests_completed_total[5m]) * 60",
            "legendFormat": "Completed per minute",
            "refId": "B"
          }
        ]
      },
      {
        "title": "üöÄ API Performance Metrics",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"tyrehero-emergency-api\"}[5m])) * 1000",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"tyrehero-emergency-api\"}[5m])) * 1000",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"tyrehero-emergency-api\"}[5m])) * 1000",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ]
      },
      {
        "title": "üî• Error Rates",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12},
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4.*\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "4xx Error Rate",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5.*\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "5xx Error Rate",
            "refId": "B"
          }
        ]
      },
      {
        "title": "üíæ Database Performance",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 18},
        "targets": [
          {
            "expr": "postgresql_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "rate(postgresql_stat_database_xact_commit[5m])",
            "legendFormat": "Commits/sec",
            "refId": "B"
          },
          {
            "expr": "rate(postgresql_stat_database_xact_rollback[5m])",
            "legendFormat": "Rollbacks/sec",
            "refId": "C"
          }
        ]
      },
      {
        "title": "‚ö° Redis Cache Performance",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 18},
        "targets": [
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Connected Clients",
            "refId": "A"
          },
          {
            "expr": "rate(redis_keyspace_hits_total[5m])",
            "legendFormat": "Cache Hits/sec",
            "refId": "B"
          },
          {
            "expr": "rate(redis_keyspace_misses_total[5m])",
            "legendFormat": "Cache Misses/sec",
            "refId": "C"
          }
        ]
      },
      {
        "title": "üñ•Ô∏è Infrastructure Health",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 18},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage % - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage % - {{instance}}",
            "refId": "B"
          }
        ]
      },
      {
        "title": "üîê Security Metrics",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=\"429\"}[5m])",
            "legendFormat": "Rate Limited Requests",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=\"401\"}[5m])",
            "legendFormat": "Unauthorized Requests",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{status=\"403\"}[5m])",
            "legendFormat": "Forbidden Requests",
            "refId": "C"
          }
        ]
      },
      {
        "title": "üåê External Dependencies",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "probe_success{dependency_type=\"payment\"}",
            "legendFormat": "Payment API",
            "refId": "A"
          },
          {
            "expr": "probe_success{dependency_type=\"maps\"}",
            "legendFormat": "Maps API",
            "refId": "B"
          },
          {
            "expr": "probe_success{dependency_type=\"messaging\"}",
            "legendFormat": "Messaging API",
            "refId": "C"
          }
        ]
      },
      {
        "title": "üìà Business KPIs",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 30},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        },
        "targets": [
          {
            "expr": "customer_satisfaction_score",
            "legendFormat": "Customer Satisfaction",
            "refId": "A"
          },
          {
            "expr": "geographic_coverage_percentage",
            "legendFormat": "Geographic Coverage %",
            "refId": "B"
          },
          {
            "expr": "technician_utilization_percentage",
            "legendFormat": "Technician Utilization %",
            "refId": "C"
          },
          {
            "expr": "payment_success_rate",
            "legendFormat": "Payment Success Rate",
            "refId": "D"
          }
        ]
      }
    ]
  }
}