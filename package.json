{
  "name": "tyrehero-emergency-service",
  "version": "1.0.0",
  "description": "24/7 Emergency Mobile Tyre Service - Production Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "cluster": "NODE_ENV=production CLUSTER_MODE=true node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint *.js",
    "security": "npm audit && snyk test",
    "logs": "tail -f logs/combined.log",
    "health": "curl http://localhost:3000/health",
    "setup": "mkdir -p logs && npm install"
  },
  "keywords": [
    "emergency",
    "tyre",
    "mobile",
    "service",
    "24/7",
    "roadside",
    "assistance"
  ],
  "author": "TyreHero",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "snyk": "^1.1244.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tyrehero/emergency-service.git"
  },
  "bugs": {
    "url": "https://github.com/tyrehero/emergency-service/issues"
  },
  "homepage": "https://tyrehero.co.uk"
}