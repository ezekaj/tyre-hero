{
  "name": "tyre-hero-server",
  "version": "1.0.0",
  "description": "Backend API for Tyre Hero application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.25.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.4.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.1",
    "joi": "^17.13.3",
    "dotenv": "^16.4.7",
    "compression": "^1.7.5",
    "express-fileupload": "^1.5.1",
    "sharp": "^0.33.5",
    "nodemailer": "^6.9.18",
    "redis": "^4.7.0",
    "winston": "^3.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/joi": "^17.2.3",
    "@types/compression": "^1.7.5",
    "@types/nodemailer": "^6.4.19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "prisma": "^5.25.0",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "typescript",
    "express",
    "prisma",
    "postgresql",
    "jwt",
    "api",
    "tyre-service"
  ],
  "author": "Tyre Hero Team",
  "license": "MIT"
}