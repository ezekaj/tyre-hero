# TyreHero Emergency Service Environment Configuration

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Clustering (for production)
CLUSTER_MODE=true

# Emergency Service
EMERGENCY_PHONE=+447700900000

# File Upload Limits
MAX_FILE_SIZE=10mb

# Database (replace with your database connection string)
DATABASE_URL=postgresql://username:password@localhost:5432/tyrehero

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@tyrehero.co.uk

# SMS Configuration (for emergency notifications)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret

# Third-party Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
POSTCODE_API_KEY=your-postcode-api-key

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# SSL/TLS (for HTTPS)
SSL_KEY_PATH=/path/to/ssl/private.key
SSL_CERT_PATH=/path/to/ssl/certificate.crt

# Redis (for session store and caching)
REDIS_URL=redis://localhost:6379

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=30d